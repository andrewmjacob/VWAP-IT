# TIP Infrastructure Configuration
# ================================

# Core
aws_region   = "us-east-1"
environment  = "dev"
project_name = "tip"

# ECS Resources
connector_cpu    = 256   # 0.25 vCPU
connector_memory = 512   # 512 MB

# Reddit Connector
enable_reddit_connector = true
reddit_subreddits       = "wallstreetbets,stocks,investing,options"

# EDGAR Connector (SEC Filings)
enable_edgar_connector   = true
edgar_ciks               = "320193,789019,1045810,1652044,1318605"  # AAPL, MSFT, NVDA, GOOGL, TSLA
edgar_user_agent_name    = "TradingIntelPlatform"
edgar_user_agent_email   = "contact@example.com"  # TODO: Update with real email
edgar_poll_interval      = 180  # 3 minutes
edgar_max_rps            = 2    # Conservative rate limit

# Optional features (disabled by default)
enable_metrics_alb = false
slack_webhook_url  = ""
alarm_sns_topic_arn = ""

# GitHub Actions OIDC (for CI/CD)
# github_repo = "your-org/your-repo"

